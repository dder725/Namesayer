   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <buttons>
            <ChoiceBox fx:id="versionChoice" prefWidth="150.0" />
          <Button fx:id="listen" alignment="CENTER" mnemonicParsing="false" onAction="#playRecording" text="Listen" />
            <Button fx:id="makeRecording" alignment="CENTER" mnemonicParsing="false" onAction="#makeRecording" text="Make recording" />
            <Button fx:id="nextName" alignment="CENTER" mnemonicParsing="false" onAction="#nextName" text="Next name" />
            <ChoiceBox fx:id="attemptChoice" onDragDetected="#pastAttempts" prefWidth="150.0" />
        </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <top>
      <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="43.0" prefWidth="600.0" BorderPane.alignment="CENTER">
