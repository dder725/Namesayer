            <Text layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Practice" textAlignment="CENTER" wrappingWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
         </children>
      </AnchorPane>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="nameLabel" text="Test">
               <font>
                  <Font size="66.0" />
               </font>
            </Label>
            <ToggleButton fx:id="badRecording" mnemonicParsing="false" onAction="#markAsBad" text="Bad recording?" />
         </children>
      </VBox>
   </center>
</BorderPane>
